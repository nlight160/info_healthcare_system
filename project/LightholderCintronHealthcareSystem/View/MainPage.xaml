<Page
    x:Class="LightholderCintronHealthcareSystem.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid HorizontalAlignment="Center" Width="1480">
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Center" Margin="0,600,0,0" Text="" VerticalAlignment="Top" Height="30" Width="196" PlaceholderText="Username"/>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Center" Margin="0,655,0,0" Text="" VerticalAlignment="Top" Width="196" PlaceholderText="Password"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Center" Margin="0,734,0,0" VerticalAlignment="Top" Click="onLogin"/>
        <TextBlock HorizontalAlignment="Left" Margin="447,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="194" Width="608" FontSize="72" TextAlignment="Center" Text="Healthcare System"/>
        <TextBlock x:Name="invalidLoginTextBlock" HorizontalAlignment="Left" Margin="584,500,0,0" Text="Incorrect credentials were provided" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="324" FontSize="20" TextAlignment="Center" Foreground="#FFD12323" Visibility="Collapsed"/>
    </Grid>
</Page>
